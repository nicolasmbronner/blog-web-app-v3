<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <!-- Dynamic EJS title -->
        <title><%= title || 'Blog Web App Demo' %></title>

        <link rel="stylesheet" href="/styles/styles.css">
    </head>


    <body>
        <!-- Navigation bar -->
        <nav class="nav-bar">
            <% 
            const navButtons = buttons || ['back']; // Default: just a back button
            const articleId = locals.articleId || null; // For edit and delete buttons
            %>

            <!-- Link buttons (<a></a>) are for navigation -->
            <!-- Buttons (<button></button>) are for form submission -->

            <% if (navButtons.includes('back')) { %>
                <a href="/" class="btn btn-back">üëà</a>
            <% } %>

            <% if (navButtons.includes('edit') && articleId) { %>
                <a href="/form/<%= articleId %>" class="btn btn-edit">‚úèÔ∏è</a>
            <% } %>

            <% if (navButtons.includes('delete') && articleId) { %>
                <button class="btn btn-delete" data-action="delete" data-id="<%= articleId %>">üóëÔ∏è</button>
            <% } %>

            <% if (navButtons.includes('post')) { %>
                <button type="submit" form="article-form" class="btn btn-post">‚úÖ</button>
            <% } %>

            <% if (navButtons.includes('new')) { %>
                <a href="/form/new" class="btn btn-new">‚ûï</a>
            <% } %>
        </nav>